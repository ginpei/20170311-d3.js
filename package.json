{
  "private": "true",
  "scripts": {
    "build": "npm run test && npm run js && echo Built!",
    "js": "browserify -t [ babelify ] src/main.js -o out/app.js",
    "start": "npm run build -s; echo Watching...; npm run watch -s",
    "test": "mocha",
    "watch": "chokidar --silent src/**/* ./test/**/* -c 'echo ! && npm run build'"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "d3": "^4.7.2",
    "jsdom": "^9.12.0",
    "moment": "^2.17.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "exorcist": "^0.4.0",
    "mocha": "^3.2.0",
    "mochify": "^3.1.0",
    "watchify": "^3.9.0"
  }
}
